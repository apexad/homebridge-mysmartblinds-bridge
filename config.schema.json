{
  "pluginAlias": "MySmartBlindsBridge",
  "pluginType": "platform",
  "headerDisplay": "This plugin uses the [MySmartBlinds Smart Bridge](https://www.mysmartblinds.com/products/smart-hub) (sold separately from blind automation kits) to control the blinds. If you don't have the bridge, check [homebridge-mysmartblinds](https://www.npmjs.com/package/homebridge-mysmartblinds) which uses bluetooh directly to the blinds.",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "default": "MySmartBlindsBridge",
        "required": true
      },
      "username": {
        "title": "Username",
        "type": "string",
        "required": true
      },
      "password": {
        "title": "Password",
        "type": "string",
        "required": true,
        "options": {
          "hidden": true
        }
      },
      "closeUp": {
        "title": "Close blinds up",
        "type": "boolean",
        "required": false,
        "default": false
      },
      "pollingInterval": {
        "title": "Polling Interval",
        "description": "(in minutes)",
        "type": "integer",
        "required": false,
        "default": 0
      },
      "allowDebug": {
        "title": "Allow Debug Logs",
        "type": "boolean"
      },
      "statusLog": {
        "title": "Status Change Logs",
        "type": "boolean"
      }
    }
  },
  "form": [
    "name",
    "username",
    "password",
    "closeUp",
    "pollingInterval",
    {
      "type": "fieldset",
      "expandable": true,
      "title": "Logs",
      "description": "Only use if you are troubleshooting or want more information in the logs",
      "items": [
        "allowDebug",
        "statusLog"
      ]
    }
  ]
}
